//Simple Queue using Linked List

#include <stdio.h>
#include <stdlib.h>

struct nodeDesign
{
    int data;
    struct nodeDesign *next;
};
struct nodeDesign *head=NULL,*node, *ptr;

int front=-1,rear=-1;

void enqueue(int size)
{
    if(rear==size-1)
    {
        printf("\nOverflow...");
        return;
    }
    node=(struct nodeDesign*)malloc(sizeof(struct nodeDesign));
    if(rear==-1)
    {
        node->next=head;
        head=node;
        rear++;
        front++;
    }
    else
    {
        ptr=head;
        while(ptr->next!=NULL)
        {
            ptr=ptr->next;
        }
        node->next=ptr->next;
        ptr->next=node;
        rear++;
    }
    printf("\nEnter element: ");
    scanf("%d", &(node->data));
    printf("\n%d Inserted successfully.",node->data);
}

void dequeue()
{
    if(front==-1)
    {
        printf("\nUnderflow...");
        return;
    }
    ptr=head;
    head=ptr->next;
    printf("\n%d Deleted successfully.",ptr->data);
    free(ptr);
    if(front==rear)
    {
        front=rear=-1;
    }
    else front++;
}

void isFull(int size)
{
    if(rear==size-1) printf("\nQueue is Full.");
    else printf("\nQueue is not Full");
}

void isEmpty()
{
    if(front==-1) printf("\nQueue is Empty.");
    else printf("\nQueue is not Empty.");
}

void printQueue(int size)
{
    int i;
    if(front==-1)
    {
        printf("[ ");
        i=0;
        while(i<size)
        {
            printf("_ ");
            i++;
        }
        printf("]");
    }
    else
    {
        i=0;
        printf("\n[  ");
        while(i<front)
        {
            printf("_ ");
            i++;
        }
        ptr=head;
        while(ptr->next!=NULL)
        {
            printf("%d ",ptr->data);
            ptr=ptr->next;
        }
        printf("%d ",ptr->data);
        i=rear+1;
        while(i<size)
        {
            printf("_ ");
            i++;
        }
        printf("]");
    }
}

int main()
{
    int size,choice;
    printf("Please enter the size of Queue: ");
    scanf("%d", &size);
    printf("\n\nMenu:\n\t1.Enqueue\n\t2.Dequeue\n\t3.Check if full\n\t4.Check if Empty\n\t5.Print Queue\n\t6.Exit");
    while(1)
    {
        printf("\nEnter your choice: ");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:
                enqueue(size);
                break;
            case 2:
                dequeue();
                break;
            case 3:
                isFull(size);
                break;
            case 4:
                isEmpty();
                break;
            case 5:
                printQueue(size);
                break;
            case 6:
                exit(0);
        }
    }
    return 0;
}
